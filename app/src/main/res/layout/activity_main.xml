<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kerstindittmann.bestappever.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Was mÃ¶chtest du einkaufen?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/appel"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/apple"
            />
        <ImageButton
            android:id="@+id/banana"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/banana"
            />
        <ImageButton
            android:id="@+id/grape"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/grapes"
            />
        <ImageButton
            android:id="@+id/sss"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/orange"
            />

    </LinearLayout>





    <Button
    android:id="@+id/retrieve_location_button"
    android:text="Retrieve Location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />


</LinearLayout>
